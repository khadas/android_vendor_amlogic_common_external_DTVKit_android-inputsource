<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_password_layout"
    android:layout_width="@dimen/px_615.0"
    android:layout_height="@dimen/px_371.0"
    android:background="@drawable/pin_dialog_background"
    android:paddingTop="@dimen/px_10.0"
    android:paddingBottom="@dimen/px_36.0"
    android:visibility="visible">

    <TextView
        android:id="@+id/wrong_pin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@string/option_item_secondary_text_font"
        android:gravity="center"
        android:textColor="@color/pin_dialog_text_color"
        android:textSize="@dimen/px_22.0"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/enter_pin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/option_item_secondary_text_font"
            android:gravity="center"
            android:textColor="@color/pin_dialog_text_color"
            android:textSize="@dimen/px_31.0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.droidlogic.fragment.NumberPickerView
                android:id="@+id/first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/px_60.0"/>

            <com.droidlogic.fragment.NumberPickerView
                android:id="@+id/second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp" />

            <com.droidlogic.fragment.NumberPickerView
                android:id="@+id/third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp" />

            <com.droidlogic.fragment.NumberPickerView
                android:id="@+id/fourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp" />

            <ImageButton
                android:id="@+id/btn_done_or_next"
                android:layout_width="@dimen/px_70.0"
                android:layout_height="@dimen/px_70.0"
                android:layout_marginStart="10dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/selector_button_next"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
